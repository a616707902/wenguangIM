<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/tools"
              xmlns:toolbar="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/thin_white"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/mine_info"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnRight"
            style="@style/ActionButton.Overflow"
            android:layout_width="@dimen/twenty_two_sp"
            android:layout_height="@dimen/twenty_two_sp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/bianji"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/hundred_dp"
            android:layout_height="@dimen/hundred_dp">

            <com.wenguang.chat.widget.CircleImageView
                android:id="@+id/mine_img"
                android:layout_width="@dimen/eighty_dp"
                android:layout_height="@dimen/eighty_dp"
                android:layout_marginTop="@dimen/ten_dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/head_icon"/>

            <ImageView
                android:id="@+id/edit_img"
                android:layout_width="@dimen/twenty_dp"
                android:layout_height="@dimen/twenty_dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@id/mine_img"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:visibility="gone"
                android:src="@drawable/bianji"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/mine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@null"
            android:gravity="center_horizontal"
            android:textSize="@dimen/eighteen_sp"
            />

        <EditText
            android:id="@+id/mine_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="@null"
            android:gravity="center_horizontal"
            android:textSize="@dimen/tenteen_sp"

            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_dp"
        android:drawableLeft="@drawable/circle_cyan"
        android:drawablePadding="@dimen/twenty_dp"
        android:paddingLeft="@dimen/twenty_dp"
        android:text="@string/mine_account"
        android:textSize="@dimen/eighteen_sp"/>

    <TextView
        android:id="@+id/mine_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:background="@null"
        android:paddingLeft="@dimen/four_eight_dp"
        android:textSize="@dimen/fourteen_sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:drawableLeft="@drawable/circle_cyan"
        android:drawablePadding="@dimen/twenty_dp"
        android:paddingLeft="@dimen/twenty_dp"
        android:text="@string/mine_idcard"
        android:textSize="@dimen/eighteen_sp"/>

    <EditText
        android:id="@+id/mine_idcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:background="@null"
        android:paddingLeft="@dimen/four_eight_dp"
        android:textSize="@dimen/fourteen_sp"/>

    <LinearLayout
        android:id="@+id/recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:drawableLeft="@drawable/circle_cyan"
            android:drawablePadding="@dimen/twenty_dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:text="@string/mine_recommend"
            android:textSize="@dimen/eighteen_sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:paddingLeft="@dimen/four_eight_dp"
            android:text="@string/mine_recommend_info"
            android:textSize="@dimen/fourteen_sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            android:drawableLeft="@drawable/circle_cyan"
            android:drawablePadding="@dimen/twenty_dp"
            android:paddingLeft="@dimen/twenty_dp"
            android:text="@string/mine_about"
            android:textSize="@dimen/eighteen_sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:paddingLeft="@dimen/four_eight_dp"
            android:text="@string/mine_about_info"
            android:textSize="@dimen/fourteen_sp"/>
    </LinearLayout>
</LinearLayout>
